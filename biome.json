{
  "extends": ["@arthurrios/biome-config/next"],
  "linter": {
    "rules": {
      "style": {
        "useImportType": "off",
        "noUselessElse": "off",
        "useSelfClosingElements": "off"
      },
      "complexity": {
        "useArrowFunction": "off"
      },
      "correctness": {
        "noUnusedImports": "warn"
      }
    }
  }
}
